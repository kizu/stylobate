$skin_namespace ?= ''

set-skin-namespace($what)
  $what = $what + '-' if $what != ''
  utilus_reassign($skin_namespace, $what)

reset-skin-namespace()
  utilus_reassign($skin_namespace, '')

skin()
  stylobate_property('skin-' + $skin_namespace[0], arguments)

global_skin()
  stylobate_property('skin-', arguments)
