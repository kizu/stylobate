optional-element($this, $element, $complex_selector = '')
  $selector = $element in $this.elements ? $this.elements[$element] : ''
  // Replace with some func for finding the root parent?
  $parent = $this.parent.parent || $this.parent

  if $selector and $parent.selector
    $selector = '/' + replace('&', $parent.selector, $selector)

    if !$complex_selector and $this.selectors[0]
      $selector = replace('&', $selector, $this.selectors[0])

  rules()
    {block}

  rules() unless $selector
  {$selector}
    {$complex_selector}
      rules() if $selector
