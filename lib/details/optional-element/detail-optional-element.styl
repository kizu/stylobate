optional-element($this, $element, $complex_selector = '')
  $selector = $element in $this.elements ? $this.elements[$element] : ''

  if $selector and $this.parent.selector
    $selector = '/' + replace('&', $this.parent.selector, $selector)

    if !$complex_selector and $this.selectors[0]
      $selector = replace('&', $selector, $this.selectors[0])

  rules()
    {block}

  rules() unless $selector
  {$selector}
    {$complex_selector}
      rules() if $selector
