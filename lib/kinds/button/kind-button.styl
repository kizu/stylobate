kind-button($this)
  @extends $kind-button

  $align = utilus_retrieve($this.arguments, middle top bottom)
  vertical-align: $align if $align

  unless no-reset in $this.arguments
    reset('button')

$kind-button
  // Should be a less-style `use` of $kind-pill
  kind-pill()

  box-sizing: border-box

  cursor: pointer
  user-select: none
  vertical-align: baseline
