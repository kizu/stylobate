kind-clear()
  if !ie
    stylobate_defaults(arguments,
      -before (after in arguments ? '' : '&:before'),
      -after (before in arguments ? '' : '&:after'))

    deprecate(arguments, after)
    deprecate(arguments, before)

  zoom: 1

kind-clear-before()
  +cache()
    content: ""
    display: table

kind-clear-after()
  +cache()
    content: ""
    display: table
    clear: both
