kind-clear($this)
  if !ie
    stylobate_defaults($this,
      -before ($this.params.after ? '' : '&:before'),
      -after ($this.params.before ? '' : '&:after'))

    deprecate($this.params, after)
    deprecate($this.params, before)

  zoom: 1

kind-clear-before()
  +cache()
    content: ""
    display: table

kind-clear-after()
  +cache()
    content: ""
    display: table
    clear: both
