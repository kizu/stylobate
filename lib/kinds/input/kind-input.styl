kind-input()
  +cache()
    kind('block' inline)

    box-sizing: border-box

    max-width: 100%

    cursor: text

    if ie
      vertical-align: middle
    else
      vertical-align: baseline

  width: utilus_alike(arguments, 400px)

  $align = utilus_retrieve(arguments, middle top bottom)
  vertical-align: $align if $align

  unless no-reset in arguments
    reset('input')
