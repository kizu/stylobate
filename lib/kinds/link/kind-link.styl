kind-link($this)
  stylobate_defaults($this, _hover '&:hover')

  unless $this.modifiers.pseudo
    stylobate_defaults($this, _underline)

  cursor: pointer

  color: $this.colors[0] or blue

  if $this.modifiers.pseudo or $this.modifiers.underline != '&'
    text-decoration: none

kind-link_pseudo()
  text-decoration: none
  border-bottom: 1px dotted

kind-link_underline()
  text-decoration: underline

kind-link_hover($this)
  color: $this.colors[0] or red
