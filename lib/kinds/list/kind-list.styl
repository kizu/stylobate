kind-list($this)
  kind(block)

  // Getting the nowrap
  if utilus_retrieve($this.arguments, nowrap nobr)
    white-space: nowrap

  // Getting the align
  $align = utilus_retrieve($this.arguments, left right center justify justify-all, left)
  if $align
    text-align: $align

  // Placing the type
  $type = utilus_retrieve($this.arguments, separate tight, separate)
  $gap = utilus_get($this.arguments, 'gap')

kind-list-item($this)
  // Getting the valign
  $valign = utilus_retrieve($this.arguments, middle baseline bottom, top)
  kind(block inline $valign)

  // get the gap from the parent
  $gap = utilus_get($this.parent.arguments, 'gap')
