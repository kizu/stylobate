kind-disabled($this)
  cursor: default !important

  opacity: $this.units[0] or 0.5

  // Prevent different states in most browsers
  if $this.params.with-events
    &:focus
      outline: 0
  else
    pointer-events: none

  stylobate_defaults($this, __nested '& &')

kind-disabled__nested()
  opacity: 1
