kind-content($this)
  $sides = utilus_get_sides($this.arguments)
  if ie or ('' + $sides == '0 0 0 0')
    padding: $sides
  else
    padding: 0 $sides[1] 0 $sides[3]

    stylobate_defaults($this.arguments,
      -before (no-before in $this.arguments or no-elements in $this.arguments ? '' : '&:before'),
      -after (no-after in $this.arguments or no-elements in $this.arguments ? '' : '&:after'))

    if no-before in $this.arguments or (-before '') in $this.arguments
      padding-top: $sides[0]

    if no-after in $this.arguments or (-after '') in $this.arguments
      padding-top: $sides[2]

  // Deprecating no-â€¦
  deprecate($this.arguments, no-before)
  deprecate($this.arguments, no-after)
  depecate_removed($this.arguments, no-elements)


kind-content-before($this)
  pseudo-with-content()

  display: table

  margin-bottom: any_get_sides($this.arguments)[0]

kind-content-after($this)
  pseudo-with-content()

  display: table
  clear: both

  margin-top: any_get_sides($this.arguments)[2]
