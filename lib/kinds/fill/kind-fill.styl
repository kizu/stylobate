kind-fill($this)
  position: utilus_retrieve($this.arguments, fixed static sticky, absolute)

  $sides = utilus_get_sides($this.arguments)
  top: $sides[0]
  right: $sides[1]
  bottom: $sides[2]
  left: $sides[3]

  $bg = utilus_get_string($this.arguments)
  $bg_color = utilus_get_color($this.arguments)
  if $bg
    $bg_color = unquote('') unless $bg_color
    background: $bg_color url($bg) utilus_retrieve($this.arguments, repeat repeat-x repeat-y , no-repeat) 50%
    // How to add bgposition here?
  else if $bg_color
    background: $bg_color

